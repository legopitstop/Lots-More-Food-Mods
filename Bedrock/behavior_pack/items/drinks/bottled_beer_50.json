{
    "format_version": "1.20.30",
    "minecraft:item": {
        "description": {
            "identifier": "morefood:bottled_beer_50",
            "menu_category": {
                "group": "itemGroup.search",
                "category": "items"
            }
        },
        "components": {
            "minecraft:max_stack_size": 1,
            "minecraft:icon": {
                "texture": "morefood:bottled_beer"
            },
            "minecraft:on_use": {
                "on_use": {
                    "condition": "q.is_item_name_any('slot.weapon.mainhand','morefood:bottled_beer_50') && q.is_item_name_any('slot.weapon.offhand','morefood:beer_mug')",
                    "event": "morefood:pour"
                }
            }
        },
        "events": {
            "morefood:pour": {
                "run_command": {
                    "command": [
                        "clear @s morefood:beer_mug 0 1",
                        "give @s morefood:beer",
                        "replaceitem entity @s slot.weapon.mainhand 0 morefood:bottled_beer_25"
                    ]
                }
            }
        }
    }
}