{
    "format_version": "1.20.10",
    "minecraft:item": {
        "description": {
            "identifier": "morefood:bottled_cider_75",
            "category": "items"
        },
        "components": {
            "minecraft:creative_category": {
                "parent": "itemGroup.search"
            },
            "minecraft:max_stack_size": 1,
            "minecraft:icon": {
                "texture": "morefood:bottled_cider"
            },
            "minecraft:on_use": {
                "on_use": {
                    "condition": "q.is_item_name_any('slot.weapon.mainhand','morefood:bottled_cider_75') && q.is_item_name_any('slot.weapon.offhand','morefood:empty_tumbler_glass')",
                    "event": "morefood:pour"
                }
            }
        },
        "events": {
            "morefood:pour": {
                "run_command": {
                    "command": [
                        "clear @s morefood:empty_tumbler_glass 0 1",
                        "give @s morefood:cider",
                        "replaceitem entity @s slot.weapon.mainhand 0 morefood:bottled_cider_50"
                    ]
                }
            }
        }
    }
}