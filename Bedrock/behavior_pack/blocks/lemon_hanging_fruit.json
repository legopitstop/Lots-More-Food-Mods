{
    "format_version": "1.20.10",
    "minecraft:block": {
        "description": {
            "identifier": "morefood:lemon_hanging_fruit",
            "properties": {
                "morefood:stage": [
                    0,
                    1,
                    2,
                    3,
                    4,
                    5,
                    6,
                    7
                ]
            }
        },
        "components": {
            "tag:non_full": {},
            "tag:plant": {},
            "minecraft:loot": "loot_tables/morefood/blocks/hanging_lemon.json",
            "minecraft:light_dampening": 0,
            "minecraft:light_emission": 0,
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0
            },
            "minecraft:geometry": "geometry.template_cross",
            "minecraft:collision_box": false,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.3
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "block_filter": [
                            "minecraft:leaves",
                            "minecraft:leaves2",
                            "minecraft:azalea_leaves",
                            "minecraft:azalea_leaves_flowered",
                            {
                                "tags": "q.any_tag('leaves') && !q.any_tag('non_full')"
                            }
                        ],
                        "allowed_faces": [
                            "down"
                        ]
                    }
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -6.2,
                    8,
                    -6.2
                ],
                "size": [
                    12.4,
                    8,
                    12.4
                ]
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "condition": "q.block_property('morefood:stage') != 7",
                    "event": "morefood:increase_stage"
                }
            },
            "minecraft:on_interact": {
                "event": "morefood:on_interact"
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('morefood:stage') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage0",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage1",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage2",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 3",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage3",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 4",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage4",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 5",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage5",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 6",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage6",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "q.block_property('morefood:stage') == 7",
                "components": {
                    "minecraft:loot": "loot_tables/morefood/blocks/mature_lemon.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "morefood:hanging_lemon_stage7",
                            "render_method": "alpha_test"
                        }
                    }
                }
            }
        ],
        "events": {
            "morefood:on_interact": {
                "sequence": [
                    {
                        "condition": "q.is_item_name_any('slot.weapon.mainhand','minecraft:bone_meal')",
                        "decrement_stack": {},
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~ ~ ~",
                                "playsound item.bone_meal.use @p ~ ~ ~"
                            ]
                        },
                        "trigger": {
                            "event": "morefood:increase_stage"
                        }
                    },
                    {
                        "condition": "q.block_property('morefood:stage') == 7",
                        "spawn_loot": {
                            "table": "loot_tables/morefood/on_interact/lemon.json"
                        },
                        "set_block_property": {
                            "morefood:stage": "0"
                        },
                        "play_sound": {
                            "sound": "block.sweet_berry_bush.pick"
                        }
                    }
                ]
            },
            "morefood:increase_stage": {
                "condition": "q.block_property('morefood:stage')!=7",
                "set_block_property": {
                    "morefood:stage": "q.block_property('morefood:stage')+1"
                }
            }
        }
    }
}