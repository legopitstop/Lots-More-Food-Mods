{
    "format_version": "1.20.10",
    "minecraft:block": {
        "description": {
            "identifier": "morefood:apple_sapling_block",
            "properties": {
                "morefood:stage": [
                    0,
                    1
                ]
            }
        },
        "components": {
            "tag:non_full": {},
            "tag:plant": {},
            "minecraft:loot": "loot_tables/morefood/blocks/apple_sapling.json",
            "minecraft:light_dampening": 0,
            "minecraft:light_emission": 0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0
            },
            "minecraft:geometry": "geometry.template_cross",
            "minecraft:collision_box": false,
            "minecraft:on_interact": {
                "condition": "q.is_item_name_any('slot.weapon.mainhand','minecraft:bone_meal')",
                "event": "event:bone_meal_growth"
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "block_filter": [
                            "minecraft:grass",
                            "minecraft:dirt",
                            "minecraft:podzol",
                            "minecraft:dirt_with_roots",
                            {
                                "tags": "q.any_tag('dirt','grass') && !q.any_tag('non_full')"
                            }
                        ],
                        "allowed_faces": [
                            "up"
                        ]
                    }
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -6.5,
                    0,
                    -6.5
                ],
                "size": [
                    13,
                    12.5,
                    13
                ]
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "event:increase_stage"
                }
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "morefood:apple_sapling",
                    "render_method": "alpha_test"
                }
            }
        },
        "events": {
            "event:bone_meal_growth": {
                "decrement_stack": {},
                "run_command": {
                    "command": [
                        "particle minecraft:crop_growth_emitter ~ ~ ~",
                        "playsound item.bone_meal.use @p ~ ~ ~"
                    ]
                },
                "trigger": {
                    "event": "event:increase_stage"
                }
            },
            "event:increase_stage": {
                "sequence": [
                    {
                        "condition": "q.block_property('morefood:stage') == 1",
                        "trigger": {
                            "event": "event:place_tree"
                        }
                    },
                    {
                        "condition": "q.block_property('morefood:stage') == 0",
                        "set_block_property": {
                            "morefood:stage": "1"
                        }
                    }
                ]
            },
            "event:place_tree": {
                "sequence": [
                    {
                        "run_command": {
                            "target": "self",
                            "command": [
                                "execute if block ~ ~1 ~ air run setblock ~ ~ ~ air",
                                "execute if block ~ ~1 ~ air run fill ~-2 ~ ~-2 ~2 ~5 ~2 air destroy"
                            ]
                        },
                        "set_block_at_pos": {
                            "block_offset": [
                                0,
                                -1,
                                0
                            ],
                            "block_type": "minecraft:dirt"
                        }
                    },
                    {
                        "randomize": [
                            {
                                "weight": 1,
                                "run_command": {
                                    "command": "execute if block ~ ~1 ~ air run structure load morefoodtree:apple_tree ~-2 ~ ~-2",
                                    "target": "self"
                                }
                            },
                            {
                                "weight": 1,
                                "run_command": {
                                    "command": "execute if block ~ ~1 ~ air run structure load morefoodtree:apple_tree2 ~-2 ~ ~-2",
                                    "target": "self"
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}