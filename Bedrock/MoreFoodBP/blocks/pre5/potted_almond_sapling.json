{
    "format_version": "1.20.10",
    "minecraft:block": {
        "description": {
            "identifier": "morefood:potted_almond_sapling"
        },
        "components": {
            "tag:non_full": {},
            "tag:morefood:flower_pot": {},
            "minecraft:light_dampening": 0,
            "minecraft:light_emission": 0,
            "minecraft:loot": "loot_tables/morefood/blocks/potted_almond_sapling.json",
            "minecraft:geometry": "geometry.template_flower_pot_cross",
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0
            },
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0
            },
            "minecraft:collision_box": {
                "origin": [-3, 0, -3],
				"size": [6, 6, 6]
            },
            "minecraft:selection_box": {
                "origin": [-3, 0, -3],
				"size": [6, 6, 6]
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "minecraft:flower_pot",
                    "render_method": "alpha_test"
                },
                "flower_pot": {
                    "texture": "minecraft:flower_pot",
                    "render_method": "alpha_test"
                },
                "flower": {
                    "texture": "morefood:almond_sapling",
                    "render_method": "alpha_test"
                },
                "dirt": {
                    "texture": "minecraft:dirt",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:on_interact": {
                "event": "morefood:remove_flower"
            },
            "minecraft:queued_ticking": {
                "looping": true,
                "interval_range": [
                    0,
                    0
                ],
                "on_tick": {
                    "event": "morefood:update_block"
                }
            }
        },
        "events": {
            "morefood:update_block": {
                "run_command": {
                    "command": "execute if block ~ ~-1 ~ air run setblock ~ ~ ~ air destroy"
                }
            },
            "morefood:remove_flower": {
                "run_command": {
                    "target": "player",
                    "command": "give @s morefood:almond_sapling"
                },
                "set_block": {
                    "block_type": "minecraft:flower_pot"
                }
            }
        }
    }
}